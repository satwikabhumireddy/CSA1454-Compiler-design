%{
#include<stdio.h>
int cons=0;
%}
digit [0-9]
%%
{digit}+ {cons++; printf("%s is a constant\n", yytext);}
.|\n     { }
%%
int yywrap(void) {
    return 1;
}
int main(void) {
    FILE *f;
    char file[100];
    printf("enter file name:");
    scanf("%s",file);
    f=fopen(file,"r");
    if(!f) {
       perror("error opening file");
       return 1;
    }
    yyin=f;
    yylex();
    printf("number of constants: %d\n",cons);
    fclose(f);
    return 0;
}
